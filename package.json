{
  "name": "mapbox-gl-traffic",
  "version": "1.0.1",
  "description": "Mapbox GL JS plugin for enabling/disabling traffic",
  "main": "index.js",
  "scripts": {
    "prepublish": "npm run build",
    "test": "eslint lib && eslint index.js",
    "watch": "mkdir -p dist && watchify index.js --debug -v --standalone MapboxTraffic -o dist/mapbox-gl-traffic.js",
    "build": "mkdir -p dist && NODE_ENV=production browserify index.js --standalone MapboxTraffic -o dist/mapbox-gl-traffic.js",
    "docs": "documentation build index.js --shallow --format=md > API.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lukasmartinelli/mapbox-gl-traffic.git"
  },
  "keywords": [
    "mapbox",
    "gis",
    "vector",
    "leaflet",
    "gl"
  ],
  "author": "Lukas Martinelli",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/lukasmartinelli/mapbox-gl-traffic/issues"
  },
  "homepage": "https://github.com/lukasmartinelli/mapbox-gl-traffic#readme",
  "devDependencies": {
    "browserify": "^11.2.0",
    "documentation": "^4.0.0-beta.18",
    "eslint": "^2.8.0",
    "eslint-config-mourner": "^2.0.1",
    "uglify-js": "^2.4.24",
    "watchify": "^3.8.0"
  },
  "peerDependencies": {
    "mapbox-gl": "^0.29.0"
  },
  "eslintConfig": {
    "parserOptions": {
      "sourceType": "module"
    },
    "env": {
      "browser": true
    },
    "extends": "mourner",
    "rules": {
      "indent": [
        2,
        2
      ]
    }
  }
}
